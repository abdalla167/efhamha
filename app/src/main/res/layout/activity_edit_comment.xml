<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activties.EditComment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:text="Edit"
        android:fontFamily="@string/app_name"
        android:gravity="center"
        android:textSize="@dimen/_18sdp"
        android:textColor="#000"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:textColor="#000"
        android:background="@color/com_facebook_button_background_color_disabled"
        android:layout_marginRight="@dimen/_24sdp"
        android:layout_marginLeft="@dimen/_24sdp"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginTop="@dimen/_10sdp"

        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_comment_edit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"

            />
        <EditText

            android:id="@+id/edite_comment_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.3"
            android:background="@drawable/shap_edit"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:orientation="horizontal"
        android:weightSum="4"
        android:gravity="right"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_10sdp"
        >


        <Button
            android:id="@+id/cancle_update"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shap_edit"
            android:text="CANCEL"
            android:layout_marginRight="5dp"
            android:fontFamily="@string/app_name"

            />


        <Button
            android:id="@+id/update_comment"
            android:background="@drawable/shap_edit"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="UPDATE"
            android:layout_marginLeft="5dp"

            android:fontFamily="@string/app_name"


            />



    </LinearLayout>

</LinearLayout>